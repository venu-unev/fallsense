<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40sp"
    android:background="@drawable/bg"
    tools:context=".Fall">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/transparent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="To enable Fall Detector, please enter the number of an emergency contact below. Whenever your phone detects that you have fallen, a text will be sent to your contact along with your coordinates. Also, please don't forget to allow the necessary permissions!"
                android:fontFamily="@font/osos"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Please ensure the GPS and accelerometer are running in background. Ensure this by simply clicking on Accelerometer and GPS from the main menu. "
                android:fontFamily="@font/osos"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">

    <TextView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter phone number of the contact"
        android:textColor="@android:color/white"
        android:fontFamily="@font/osos"
        android:layout_gravity="center"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/txtPhoneNo"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:textColorHint="@android:color/white"
        android:hint="Enter a valid 10 digit number"
        android:fontFamily="@font/osos"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:maxLength="10" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Emergency Number"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Emergency Number"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_gravity="center"></Button>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:textSize="20sp"
        android:fontFamily="@font/osos"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="20sp"
        ></TextView>


</LinearLayout>